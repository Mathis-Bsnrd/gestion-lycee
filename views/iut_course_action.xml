<odoo>
    <record id="iut_course_action" model="ir.actions.act_window">
        <field name="name">Cours</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">iut.course</field>
        <field name="view_mode">tree</field>
        <field name="context">{'search_default_opened':1}</field>
    </record>
    <record id="iut_cours_treeview" model="ir.ui.view">
        <field name="name">Cours</field>
        <field name="model">iut.course</field>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
</odoo>